.container {
  padding: 20rpx;
}

.detail-image {
  width: 100%;
  height:300rpx;
  object-fit: cover;
  border-radius: 10rpx;
}

.detail-info {
  margin-top: 20rpx;
  display:flex;
  flex-direction: column;
  justify-content:center;
}

.title {
  display:flex;
  justify-content:center;
  font-size: 30rpx;
  font-weight: bold;
}

.dynasty {
  display:flex;
  justify-content:center;
  font-size: 30rpx;
  color: #666;
  margin-top: 10rpx;
}

.description {
  font-size: 30rpx;
  margin-top: 10rpx;
}