/* pages/dg/dg.wxss */
.container {
  padding: 20rpx;
}

.header {
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.clothes-list {
  display: flex;
  flex-wrap: wrap;
}

.clothes-item {
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.clothes-image {
  width: 100%;
  object-fit: cover;
  border-radius: 10rpx;
}

.clothes-info {
  margin-top: 10rpx;
}

.title {
  font-size: 18rpx;
  font-weight: bold;
}

.dynasty {
  font-size: 16rpx;
  color: #666;
}