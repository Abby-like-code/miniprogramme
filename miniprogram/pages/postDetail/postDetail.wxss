.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.info {
  margin-left: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.time-views {
  font-size: 24rpx;
  color: #999;
}

.content {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.content-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.comments {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.comment-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-info {
  margin-left: 20rpx;
}

.comment-nickname {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.comment-content {
  font-size: 26rpx;
  color: #666;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
  margin-left:200rpx;
}
.image-container image { width: 300rpx; height: 300rpx; margin-right: 10rpx; margin-bottom: 10rpx; }
.add-comment {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.comment-input {
  width: 100%;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.comment-btn {
  width: 100%;
  height: 60rpx;
  border-radius: 5rpx;
  background-color: #007bff;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
}